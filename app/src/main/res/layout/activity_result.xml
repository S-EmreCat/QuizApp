<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".ResultActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="347dp"
        android:layout_height="135dp"
        android:layout_marginTop="7dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout1"
                android:layout_width="105dp"

                android:layout_height="45dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="-60dp"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/completaion"
                    android:layout_width="81dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:drawableLeft="@drawable/bullet_blue"
                    android:foregroundGravity="left"
                    android:text="@string/_100"
                    android:textColor="#3092BF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/completaion1"
                    android:layout_width="83dp"
                    android:layout_height="19dp"
                    android:text="@string/completion"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/completaion" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout2"
                android:layout_width="105dp"
                android:layout_height="45dp"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="10dp"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout1">

                <TextView
                    android:id="@+id/correct"
                    android:layout_width="70dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="18dp"
                    android:drawableLeft="@drawable/bullet_green"
                    android:textColor="#2D9832"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/correct2"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:text="@string/correct"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/correct" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout3"
                android:layout_width="137dp"
                android:layout_height="46dp"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.496">

                <TextView
                    android:id="@+id/totalQuestion"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="14dp"
                    android:drawableLeft="@drawable/bullet_purple"
                    android:text="@string/_10"
                    android:textColor="#692575"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.474"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/totalQuestion2"
                    android:layout_width="92dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="-7dp"
                    android:text="@string/total_question"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.844"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/totalQuestion" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout4"

                android:layout_width="105dp"
                android:layout_height="45dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintlayout3">

                <TextView
                    android:id="@+id/wrong"
                    android:layout_width="60dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="18dp"
                    android:drawableLeft="@drawable/bullet_red"
                    android:textColor="#953F24"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wrong2"
                    android:layout_width="48dp"
                    android:layout_height="19dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/wrong"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wrong"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout6"
        android:layout_width="375dp"
        android:layout_height="227dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview1">

        <Button
            android:id="@+id/buttonLeaderBoard"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_leaderboard_24"

            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonHome"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttonPdf"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_picture_as_pdf_24"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonHome"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_baseline_share_24"

            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.272"
            app:layout_constraintStart_toEndOf="@+id/buttonReview"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttonReview"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/preview"
            android:textAllCaps="false"
            android:textColor="#3092BF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttonPlayAgain"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/replay"
            android:textAllCaps="false"
            android:textColor="#3092BF"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonReview"
            app:layout_constraintHorizontal_bias="0.592"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/review_answer"
            app:layout_constraintBottom_toBottomOf="@+id/buttonReview"
            app:layout_constraintEnd_toEndOf="@+id/buttonReview"
            app:layout_constraintStart_toStartOf="@+id/buttonReview" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/play_again"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/buttonPlayAgain"
            app:layout_constraintEnd_toEndOf="@+id/buttonPlayAgain"
            app:layout_constraintStart_toStartOf="@+id/buttonPlayAgain" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/share_score"
            app:layout_constraintBottom_toBottomOf="@+id/buttonShare"
            app:layout_constraintEnd_toEndOf="@+id/buttonShare"
            app:layout_constraintStart_toStartOf="@+id/buttonShare" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/home"
            app:layout_constraintBottom_toBottomOf="@+id/buttonHome"
            app:layout_constraintEnd_toEndOf="@+id/buttonHome"
            app:layout_constraintStart_toStartOf="@+id/buttonHome" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/generate_pdf"
            app:layout_constraintBottom_toBottomOf="@+id/buttonPdf"
            app:layout_constraintEnd_toEndOf="@+id/buttonPdf"
            app:layout_constraintStart_toStartOf="@+id/buttonPdf" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/leaderboard"
            app:layout_constraintBottom_toBottomOf="@+id/buttonLeaderBoard"
            app:layout_constraintEnd_toEndOf="@+id/buttonLeaderBoard"
            app:layout_constraintStart_toStartOf="@+id/buttonLeaderBoard" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#AAB5DA"
        app:cardCornerRadius="85dp"
        app:cardElevation="13dp"
        app:layout_constraintBottom_toTopOf="@+id/cardview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/circleCardView"
                android:layout_width="151dp"
                android:layout_height="143dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="13dp"
                android:shape="ring"
                app:cardBackgroundColor="#8A99B5"
                app:cardCornerRadius="75dp"
                app:cardElevation="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/circleCardView2"
                        android:layout_width="102dp"
                        android:layout_height="102dp"
                        android:shape="ring"
                        app:cardBackgroundColor="#DDDFE3"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/textViewYourScore"
                                android:layout_width="99dp"
                                android:layout_height="29dp"
                                android:gravity="center"
                                android:text="@string/your_score"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.343" />

                            <TextView
                                android:id="@+id/textViewScore"
                                android:layout_width="91dp"
                                android:layout_height="49dp"
                                android:layout_marginTop="-30dp"
                                android:clickable="false"
                                android:gravity="center"
                                android:paddingTop="2dp"
                                android:text="@string/_10pt"
                                android:textSize="34sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textViewYourScore" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>